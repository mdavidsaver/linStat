# reading
# - /proc/net/netstat
# - /proc/net/snmp
# or
# - /proc/self/net/netstat
# - /proc/self/net/snmp

global {IOC="\$(P)"}

file "tblScan.template" {
{NAME="SNMP", OUT="netstat|/proc\$(INST)/net/snmp|Ip:InReceives", PERIOD="60"}
{NAME="NET", OUT="netstat|/proc\$(INST)/net/netstat|IpExt:InOctets", PERIOD="60"}
}

file "tblGetRateI64.template" {
{NAME="UDP_RX", INP="netstat|/proc\$(INST)/net/snmp|Udp:InDatagrams",
 ADEL="10", ASLO="0.0009765625", EGU="Kpkt/s"}
{NAME="UDP_TX", INP="netstat|/proc\$(INST)/net/snmp|Udp:OutDatagrams",
 ADEL="10", ASLO="0.0009765625", EGU="Kpkt/s"}
{NAME="RX:D", INP="netstat|/proc\$(INST)/net/snmp|Ip:InDiscards",
 ADEL="10", ASLO="0.0009765625", EGU="Kpkt/s"}

{NAME="RX", INP="netstat|/proc\$(INST)/net/netstat|IpExt:InOctets",
 ADEL="10", ASLO="0.0009765625", EGU="KB/s"}
{NAME="RX:B", INP="netstat|/proc\$(INST)/net/netstat|IpExt:InBcastOctets",
 ADEL="10", ASLO="0.0009765625", EGU="KB/s"}
{NAME="RX:M", INP="netstat|/proc\$(INST)/net/netstat|IpExt:InMcastOctets",
 ADEL="10", ASLO="0.0009765625", EGU="KB/s"}
{NAME="TX", INP="netstat|/proc\$(INST)/net/netstat|IpExt:OutBcastOctets",
 ADEL="10", ASLO="0.0009765625", EGU="KB/s"}
{NAME="TX:B", INP="netstat|/proc\$(INST)/net/netstat|IpExt:OutBcastOctets",
 ADEL="10", ASLO="0.0009765625", EGU="KB/s"}
{NAME="TX:M", INP="netstat|/proc\$(INST)/net/netstat|IpExt:OutMcastOctets",
 ADEL="10", ASLO="0.0009765625", EGU="KB/s"}
}
